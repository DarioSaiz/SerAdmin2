<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity"
    android:padding="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_vertical"
        >

        <Button
            android:id="@+id/verEventos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#00000000"
            android:text="Ver Eventos"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2.5dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/buscarEventos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#00000000"
            android:text="Buscar Eventos"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2.5dp"
            android:layout_marginTop="20dp" />

        <Button
            android:id="@+id/modificarEventos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#00000000"
            android:text="Gestionar Archivos"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2.5dp"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/eliminarEventos"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:backgroundTint="#00000000"
            android:text="Gestionar Eventos"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2.5dp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

