<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".NuevoGestor">

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:divider="@drawable/divider_nuevo_gestor"
        android:gravity="center"
        android:orientation="vertical"
        android:showDividers="middle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/tituloCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Título"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/fechaInicioCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Inicio"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:clickable="true"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/horaInicioCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de Inicio"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:clickable="true"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />


        <EditText
            android:id="@+id/fechaFinCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Fecha de Fin"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:clickable="true"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />


        <EditText
            android:id="@+id/horaFinCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Hora de Fin"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:focusable="false"
            android:clickable="true"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/latitudCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Latitud"
            android:inputType="numberDecimal"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/longitudCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Longitud"
            android:inputType="numberDecimal"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />

        <EditText
            android:id="@+id/descripcionCrearEvento"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Descripción"
            android:inputType="text"
            android:maxLength="180"
            android:maxLines="1"
            android:minEms="20"
            android:textCursorDrawable="@null"
            android:textSize="@dimen/day_text_size"
            android:textColor="@color/white"
            android:textColorHint="@color/hint_white"
            android:backgroundTint="@color/white" />

        <Button
            android:id="@+id/crearEvento"
            android:layout_width="@dimen/ancho_cajas_texto"
            android:layout_height="@dimen/alto_boton"
            android:backgroundTint="#00000000"
            android:text="Crear evento"
            android:textSize="16sp"
            android:textStyle="bold"
            app:strokeColor="@color/white"
            app:strokeWidth="2.5dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>